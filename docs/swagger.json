                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controllers.ProgressRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
